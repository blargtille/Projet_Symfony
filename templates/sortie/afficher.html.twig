{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ sortie.nom }}</h1>
    <h2>{{ sortie.etatE.libelle }}</h2>

        <div>Date et heure de la sortie: {{ sortie.dateHeureDebut|date('d-m-Y H') }} </div>
        <div>Date limite d'inscription: {{ sortie.dateLimiteInscription|date('d-m-Y') }}</div>
        <div>Nombres de places: {{ sortie.nbInscriptionMax }}</div>
        <div>Dur√©e: {{ sortie.duree }}  minutes</div>
        <div>Description et infos: {{ sortie.infosSortie }}</div>
        <div>Lieu: {{ sortie.lieu.nom }}</div>
        <div>Rue: {{ sortie.lieu.rue }}</div>
        <div>Ville: {{ sortie.lieu.ville.nom }}</div>
        <div>Code postal: {{ sortie.lieu.ville.codePostal }}</div>
        <div>Latitude: {{ sortie.lieu.latitude }}</div>
        <div>Longitude: {{ sortie.lieu.longitude }}</div>
        <br>
        <div>Liste des participants inscrits:
            <ul>
                {% for user in sortie.participant %}
                    <li><a href="{{ path('main_detailsUser', {'id': user.id}) }}">{{ user.pseudo }} : {{ user.prenom }} {{ user.nom }}</a></li>

                {% endfor %}
            </ul>
        </div>


{% endblock  %}

{% block title %}

    {{ parent() }} | {{ sortie.nom }}

{% endblock %}

