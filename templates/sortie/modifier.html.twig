{% extends 'base.html.twig' %}

{% block title %}
Modifier une sortie | {{ parent() }}
{% endblock %}

{% block body %}
<h1>Modifier une sortie</h1>

    <div>
        {# balise form ouvrante #}
        {{ form_start(modifySortieForm) }}

        {# affiche tous les champs du formulaire #}
        {{ form_widget(modifySortieForm) }}

        {{ sortie.lieu.rue }}
        {{ sortie.lieu.ville.nom }}
        {{ sortie.lieu.ville.codePostal }}


        <button type="submit">Enregistrer</button>
        <button type="submit"><a href="#">Publier la sortie</a></button>
        <button type="submit"><a href="#">Supprimer la sortie</a></button>
        <button type="button"><a href="{{ path('sortie_accueil') }}">Annuler</a></button>

        {# balise form fermant #}
        {{ form_end(modifySortieForm) }}

    </div>

{% endblock %}



