{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Mon profil
{% endblock %}

{% block body %}
    <h1>Mon profil</h1>
<div class="row">
    <div class="form_profil">
        {{ form_start(userForm) }}

        {{ form_widget(userForm) }}

        <button>Modifier</button>
        {{ form_end(userForm) }}
    </div>
    <div class="photo_profil">
        {% if photo %}
            <img src="{{ asset('img/imgProfil/'~photo) }}" alt="photo profil">
        {% else %}
            <img src="{{ asset('img/default.png') }}" alt="photo profil par defaut">
        {% endif %}
    </div>
</div>
{% endblock %}

